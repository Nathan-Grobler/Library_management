@model IEnumerable<Library.Models.LibraryModel>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BookName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Read)
            </th>
            <th><a onclick="showInPopup('@Url.Action("AddorEdit","Library", new {id = 0 },Context.Request.Scheme)','New Book')" class="btn btn-success text-white">Add Book</a></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BookName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Read)
                </td>
                <td>
                    <a onclick="showInPopup('@Url.Action("AddorEdit","Library",new { id = item.BookID },Context.Request.Scheme)','Update Book')" class="btn btn-warning text-white">Edit</a> |
                    <a onclick="showInPopup('@Url.Action("Details","Library",new { id = item.BookID },Context.Request.Scheme)','Details')" class="btn btn-info text-white">Details</a> |
                    <form asp-action="Delete" asp-route-id="@item.BookID" onsubmit="return jQueryAjaxDelete(this);" class="d-inline">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </form> 
                </td>
            </tr>
        }
    </tbody>
</table>